<Window x:Class="FilesWithAspose.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FilesWithAspose"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="button" Content="Click Me" Margin="309,151,284.6,159" Width="200" Height="110" Cursor="Arrow" RenderTransformOrigin="0.5,0.5" FontSize="25" FontFamily="{DynamicResource {x:Static SystemFonts.CaptionFontFamilyKey}}" Click="Button_Click" Background="#FFE80909" Foreground="Black" Focusable="False">
            <Button.Effect>
                <DropShadowEffect BlurRadius="2" ShadowDepth="7"/>
            </Button.Effect>
        </Button>

    </Grid>
</Window>
